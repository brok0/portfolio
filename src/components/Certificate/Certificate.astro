---
import LinkButton from "../LinkButton.astro";

export interface Props {
  title: string;
  description: string;
  link: string;
}

const { link, title, description } = Astro.props;
---

<div class="card__wrap">
  <div class="card">
    <div>
      <h4>{title}</h4>
      <p>{description}</p>
    </div>
    <LinkButton link={link} text={"Check Out"} />
  </div>
</div>

<style>
  @import "./certificate.scss";
</style>
