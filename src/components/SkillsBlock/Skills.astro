---
type skills = Array<string>;

export interface Props {
  data: skills;
}
const { skills } = Astro.props;
---

<!-- <h2>Skills 👨‍💻</h2> -->
<div class="skills__wrap">
  {skills.map((e) => <div class="skill">{e}</div>)}
</div>

<style lang="scss">
  @import "./styles.scss";
</style>

<script type="module" src="/src/components/SkillsBlock/script.js"></script>

<!-- Initialize the card animations -->
<script type="module">
  import animateSkills from "/src/components/SkillsBlock/script.js";
  animateSkills();
</script>
