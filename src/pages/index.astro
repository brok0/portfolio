<style>
  .center {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
  }

  h2.know-more {
    margin-bottom: 0px;
    color: white;
    border: unset;
    font-size: 46px;
  }

  .name {
    font-size: 90px;
    font-family: Monaco;
    color: #747fe0;
    text-align: center;
  }
  h2,
  h3 {
    color: #525f7f;
  }
  h2 {
    width: fit-content;
    padding-bottom: 30px;
    padding-top: 30px;
    border-bottom: 10px solid #2450c1;
  }

  .two-col {
    display: flex;
    gap: 40px;
    justify-content: space-evenly;
  }

  .card {
    border-radius: 10px;
    background-color: white;
    padding: 20px;
  }

  .card h2 {
    margin-top: 0;
    padding-top: 0;
  }

  .subtitle {
    text-align: center;
  }

  .waves {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 0);
    z-index: -1;
    width: 100vw;
  }

  .waves.top {
    top: 0;
    bottom: auto;
  }

  .wave-block {
    padding: 50px 0px;
    position: relative;
  }

  @media (max-width: 800px) {
    .two-col {
      display: block;
    }

    .card {
      margin-bottom: 30px;
    }
  }

  @media (max-width: 1440px) {
    .center p {
      color: gray;
    }

    h2.know-more {
      color: gray;
    }
  }
</style>
