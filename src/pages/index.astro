---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header/Header.astro";
import data from "../data.json";
import Certificate from "../components/Certificate/Certificate.astro";
import Project from "../components/Project/Project.astro";
import LinkButton from "../components/LinkButton.astro";
import Experience from "../components/ExperienceBlock/Experience.astro";
import Skills from "../components/SkillsBlock/Skills.astro";
---

<Layout title="Borys Hlynskyi">
  <Header />
  <main>
    <h1 class="name">👋🏻 Hi, I'm Borys Hlynskyi</h1>
    <h2 class="subhead">Web developer from Ukraine specializing in frontend</h2>

    <Skills skills={data.skills} />
    <h2 id="projects">My Projects 🧙🏻‍♂️</h2>

    {data.projects.map((e) => <Project data={e} />)}

    <Experience />

    <h2 id="certifications">Certifications 👨🏻‍🏫</h2>

    {
      data.certificates.map((e) => (
        <Certificate
          title={e.title}
          description={e.description}
          link={e.link}
        />
      ))
    }

    <div class="waves-block" id="contacts">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1440 320"
        class="waves top"
        ><path fill="#0099ff" fill-opacity="1" d="M0,288L1440,192L1440,0L0,0Z"
        ></path></svg
      >

      <div class="center">
        <h2 class="know-more">Want to know more?</h2>
        <p>Contact me at <b>bglinskii6@gmail.com</b></p>
        <LinkButton link="mailto:bglinskii6@gmail.com" text="Send email" />
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  @import "./styles.scss";
</style>
